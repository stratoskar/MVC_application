@model Tuple<course, students>

@{
    ViewData["Title"] = "Add A Grade";
    Layout = "_ProfessorLayout";
}

<style>
    a {
        font-size: 18px;
        color: #FFFFFF;
    }

    * {
        font-family: candara;
        color: white;
        font-family: 18px;
    }

    .button {
        background-color: mediumseagreen;
        color: white;
        padding: 10px 18px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: auto;
    }

    .box {
        border: 1px solid white;
        height: 30px;
    }

    body {
        background-color: seagreen;
    }

    a:hover {
        color: floralwhite;
    }
</style>

<body>
    <form method="post" asp-controller="professor" asp-action="Add">
        <div class="container">
            <label><a style="color:#012A6C">Students Registration Number:</a></label>
            <input type="number" placeholder="" name="registrationnumber" value="@Model.Item2.RegistrationNumber" required locked>

            <label><a style="color:#012A6C">Course ID:</a></label>
            <input type="number" placeholder="" name="courseid" value="@Model.Item1.IdCourse" required locked>

            <label><b style="color:#012A6C">Grade:</b></label>
            <input type="number" placeholder="Enter Grade" name="grade" min="0" max="10" value="5" required>
        </div>
        <div class="container" style="background-color:#f1f1f1">
            <button style="background-color: #012A6C;" type="submit">ASSIGN</button>
        </div>


    </form>
</body>